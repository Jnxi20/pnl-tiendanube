# Tienda Nube API Credentials
TIENDANUBE_CLIENT_ID=your_client_id_here
TIENDANUBE_CLIENT_SECRET=your_client_secret_here
TIENDANUBE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database (PostgreSQL)
# For local development: Use a local PostgreSQL instance or Vercel Postgres
# DATABASE_URL="postgresql://user:password@localhost:5432/pnl_tiendanube?schema=public"
DATABASE_URL=your_database_url_here

# NextAuth.js (for authentication and session management)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Token Encryption Key (for storing Tienda Nube access tokens securely)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_here

# API Rate Limiting
RATE_LIMIT_PER_SECOND=2
RATE_LIMIT_PER_HOUR=5000
